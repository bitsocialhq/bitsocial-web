{
  "name": "bitsocial-web",
  "description": "Official Bitsocial web frontend: landing page, docs, apps explorer, and future flagship client",
  "author": "Bitsocial Labs",
  "private": true,
  "license": "AGPL-3.0-only",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "bunx rolldown-vite",
    "build": "bunx tsgo --noEmit --project tsconfig.json && bunx rolldown-vite build",
    "lint": "bunx oxlint --react-plugin",
    "lint:fix": "bunx oxlint --fix --react-plugin",
    "format": "bunx oxfmt .",
    "format:check": "bunx oxfmt --check .",
    "typecheck": "bunx tsgo --noEmit --project tsconfig.json",
    "preview": "bunx rolldown-vite preview",
    "commit": "cz"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.4",
    "gsap": "^3.14.2",
    "i18next": "^25.8.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^6.26.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@react-scan/vite-plugin-react-scan": "0.1.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.182.0",
    "@typescript/native-preview": "^7.0.0-dev",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "4",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.1.0",
    "oxlint": "^1.0.0",
    "postcss": "^8.4.38",
    "react-grab": "0.1.9",
    "react-scan": "0.4.3",
    "rolldown-vite": "^7.3.1",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "bunx oxlint --fix --react-plugin",
      "bunx oxfmt"
    ],
    "*.{json,css}": "bunx oxfmt"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
